<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Edit Robot</title>
    <link rel="stylesheet" href="/style.css">
    <link href="https://fonts.googleapis.com/css?family=Inconsolata" rel="stylesheet">
  </head>
  <body>
    <div id="editPage">
    <div id="top">
    <img src={{avatar}} class='avatar'>
    </div>
    <div id="editForm">
    <form action="/info/edit/{{id}}" method="post">
      <p>Name</p><input type="text" name="name" value="{{name}}">
      <p>City</p><input type="text" name="city" value="{{city}}">
      <p>Country</p><input type="text" name="country" value="{{country}}">
      <p>Job</p><input type="text" name="job" value="{{job}}">
      <p>Company</p><input type="text" name="company" value="{{company}}">
      <p>Email</p><input type="text" name="email" value="{{email}}">
      <p>Phone Number</p><input type="text" name="phone" value="{{phone}}">
      <p>University</p><input type="text" name="university" value="{{university}}">
      <input type="submit" name="submit" value="Submit">
    </form>
    </div>
  </div>
  </body>
</html>
